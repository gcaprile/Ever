<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.app.checkinmap.ui.activity.DashBoardActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="center"
        android:src="@drawable/emasal_ball" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/button_start_rout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="50dp"
            android:text="@string/start_route"
            android:textAllCaps="true"
            android:textColor="@color/colorText" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_view_connection_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGray"
        android:gravity="center|left"
        android:minHeight="50dp"
        android:paddingStart="20dp"
        android:text="@string/connected_like_sales_person"
        android:textColor="@color/colorText" />

</LinearLayout>
